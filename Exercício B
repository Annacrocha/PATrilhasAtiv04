using System;

namespace atividade
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Você deseja comprar um carro novo?");
			bool carro = Console.ReadLine().ToLower() == "sim";
			Console.WriteLine("Você tem dinheiro sufuciente?");
			bool dinheiro = Console.ReadLine().ToLower() == "sim";
			
			if (carro && dinheiro) {
				Console.WriteLine("Parabéns, você pode comprar um carro novo!");
			} else {
				Console.WriteLine("Fica para a próxima !");
			}
			                  
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
